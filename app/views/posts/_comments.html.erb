<% @post.comments.each do |comment| %>
  <div class='row'>
    <div class='span0'>
      <% if logged_in? %>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote:true do %>
          <i class='icon-arrow-up'></i>
        <% end %>
      <% end %>
      <br/>
      <span id='comment_<%= comment.id %>_votes'><%= comment.total_votes %> votes</span>
      <br/>
      <% if logged_in? %>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post', remote:true do %>
          <i class='icon-arrow-down'></i>
        <% end %>
      <% end %>
    </div>
    <div class='span6'>
      <p><%= comment.body %></p>
      <p><span class='quiet'>by </span><%= link_to comment.author.username, user_path(comment.author) %> <span class='quiet'>on</span> <%= prettify_datetime(comment.created_at) %></p>
    </div>
  </div>
  <hr></hr>
<% end %>
