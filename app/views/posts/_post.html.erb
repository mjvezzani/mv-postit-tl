<div class='row'>
<!-- Voting box --!>
  <div class='span0 well'>
    <% if logged_in? %>
      <%= link_to vote_post_path(@post, vote: true), method: 'post' do %>
        <i class='icon-arrow-up'></i>
      <% end %>
    <% end %>
    <br/>
    <%= @post.total_votes %> votes
    <br/>
    <% if logged_in? %>
      <%= link_to vote_post_path(@post, vote: false), method: 'post' do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end %>
  </div>
<!-- Post box -->
  <div class='span6 well'>
    <% if @post.categories.length > 0 %>
      <% @post.categories.each do |c| %>
        <%= link_to c.name, category_path(c), class: 'btn btn-small btn-danger btn-rounded' %>
      <% end %>
    <% end %>
    <h4><%= link_to @post.title, post_path(@post)%></h4>
    <p><%= @post.description %></p>
    <p><span class='quiet'>posted by</span> <%= link_to @post.author.username, user_path(@post.author) %> at <%= prettify_datetime(@post.created_at) %></p>
    <p>
      <% if user_can_edit? %>
        <%= link_to 'Edit post', edit_post_path(@post) %>
      <% end %>
    </p>
  </div>
</div>
<hr></hr>
