<h2>Sign In</h2>

<hr></hr>

<%= form_tag '/login' do %>
  <div class='control-group'>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div class='control-group'>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag 'Login', class: 'btn btn-sucess' %>
<% end %>
